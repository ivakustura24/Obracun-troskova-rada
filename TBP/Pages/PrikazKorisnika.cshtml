@page 
@model PrikazKorisnika
@{
    ViewData["Title"] = "Lista korisnika";
}
<div asp-validation-summary="All" class="text-danger"></div>
<h1>@ViewData["Title"]</h1>

<div class="container">
    
    <div class="row">
        <div class="col-md-6">
            <ul class="list-group">
                @foreach (var korisnik in Model.korisnici){
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                            <strong>@korisnik.Ime @korisnik.Prezime</strong>
                            <p>E-mail:@korisnik.Email</p>
                    </div>
                    <a class="btn btn-primary" asp-page="/ObracunKorisnika" asp-route-id="@korisnik.Id">Pregled korisnika</a>
                </li>
               }
            </ul>
        </div>
    </div>
</div>


