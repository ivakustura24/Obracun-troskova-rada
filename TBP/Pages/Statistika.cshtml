@page
@model Statistika
@{
    ViewData["Title"] = "Statistika";
}
<h1>@ViewData["Title"]</h1>
<div>
    <p> Ukupna neto cijena svih obavljenih poslova </p>
    @foreach (var posao in Model.PosloviKorisnika)
    {
        <strong> @posao.Naziv</strong>
        <p>@posao.Suma €</p>
    }
</div>

