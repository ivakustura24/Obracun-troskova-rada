<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TBP</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TBP.styles.css" asp-append-version="true" />
    <script src="~/lib/chart.js/Chart.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>
    @await RenderSectionAsync("Scripts", required:false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">TBP</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                         
                             <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Registracija">Registracija</a>
                            </li>
                         
                       
                        @if (Model._prijavljeniKorisnik.Uloga == 1)
                        {
                                @* <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/Home">Početna</a>
                                </li> *@
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/PrikazKorisnika">Prikaz korisnika</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/KreirajAktivnost">Kreiraj aktivnosti</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/DodajPosao">Dodaj posao</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/Index">Odjava</a>
                                </li>
                           
                        }
                    
                        @if (Model._prijavljeniKorisnik.Uloga == 2 )
                        {
                                @* <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/Home">Početna</a>
                                </li>*@                                
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/DodajRadniUnos">Radni unos</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/Statistika">Statistika</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/PlatnaLista">Platna lista</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/Index">Odjava</a>
                                </li>
                        
                        }
                    </ul >
                    @if (Model._prijavljeniKorisnik.Ime != null)
                    {
                    <ul class ="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/"> Pozdrav @Model._prijavljeniKorisnik.Ime!</a>
                        </li>
                    </ul>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
       
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - TBP - <a asp-area="">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>